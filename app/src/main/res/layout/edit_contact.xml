<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddContact"
    android:background="#fff"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:textColor="#3951D8"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:text="Hủy"
            android:id="@+id/btnClose"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@android:color/transparent"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sửa liên hệ"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <Button
            android:textSize="20sp"
            android:textColor="#3951D8"
            android:textAllCaps="false"
            android:text="Xong"
            android:id="@+id/btnEdit"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@android:color/transparent"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/addpic"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_marginLeft="10dp"
                android:id="@+id/edName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Họ và tên"
                android:gravity="left"
                android:textSize="20sp"
                android:padding="20dp"
                />

            <EditText
                android:id="@+id/edMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:hint="Số điện thoại"
                android:inputType="number"

                android:padding="20dp"
                android:textSize="20sp" />
            <EditText
                android:layout_marginLeft="10dp"
                android:id="@+id/edEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:gravity="left"
                android:textSize="20sp"
                android:padding="20dp"
                />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/pic" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_below="@+id/image1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/pic" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_below="@+id/image2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/pic" />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_below="@+id/image3"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/pic" />

        <ImageView
            android:id="@+id/image5"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_below="@+id/image4"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/pic" />

        <ImageView
            android:id="@+id/image6"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_below="@+id/image5"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/pic" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/image1"
            android:text="Thêm url"
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/txt1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/image1"
            android:text="Thêm địa chỉ"
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/txt2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/image1"
            android:text="Thêm sinh nhật"
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/txt3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/image1"
            android:text="Thêm ngày"
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/txt4"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/image1"
            android:text="Thêm tên liên quan"
            android:id="@+id/txt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/txt5"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/image1"
            android:text="Thêm hồ sơ xã hội"
            android:id="@+id/txt6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>